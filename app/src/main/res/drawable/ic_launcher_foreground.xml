<?xml version="1.0" encoding="utf-8"?>
<!-- This file now wraps your PNG icon for the adaptive icon foreground -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
      This item points to your choosey_icon.png.
      The size (72dp) and gravity (center) ensure it sits correctly
      within the adaptive icon's "safe zone" and won't be cropped.
    -->
    <item
        android:drawable="@drawable/choosey_icon"
        android:width="72dp"
        android:height="72dp"
        android:gravity="center" />

</layer-list>